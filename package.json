{
  "name": "unpuzzle-monorepo",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "cd apps/instructor && npm ci && npm run build",
    "start": "cd apps/instructor && PORT=${PORT:-3000} node .next/standalone/server.js",
    "build:client": "cd apps/client && npm ci && npm run build",
    "start:client": "cd apps/client && PORT=${PORT:-3000} node .next/standalone/server.js",
    "build:student": "cd apps/student && npm ci && npm run build", 
    "start:student": "cd apps/student && PORT=${PORT:-3000} node .next/standalone/server.js",
    "dev": "echo 'Use individual app dev commands'",
    "lint": "echo 'Use individual app lint commands'",
    "test": "echo 'Use individual app test commands'",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,md,json}\"",
    "clean": "rm -rf node_modules apps/*/node_modules"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}