{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd apps/client && npm install --production=false && npm run build"
  },
  "deploy": {
    "startCommand": "cd apps/client && npm start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "env": {
    "NODE_ENV": "production",
    "NIXPACKS_NODE_VERSION": "20"
  }
}